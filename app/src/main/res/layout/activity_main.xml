<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/container"
    android:orientation="vertical"
    android:weightSum="2"
    android:visibility="gone"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        >
        <ImageButton
            android:id="@+id/thumbone"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />
        <ImageButton
            android:id="@+id/thumbtwo"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            />
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <customanimation.com.customanimation.HorizontalPicker
        android:id="@+id/picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="2"
        app:values="@array/values"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:dividerSize="10dp"
        app:sideItems="@integer/numSideItems"
        android:layout_gravity="left"
        />

    <ImageButton
        android:id="@+id/fetchslotsgedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FETCH SLOTS"
        android:src="@mipmap/ic_launcher"
        />
</LinearLayout>
</LinearLayout>
